<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_daily_mode"
    android:orientation="vertical"
    tools:context=".View.OfficialAccountActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/official_account_topbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/bg_daily_mode"
        app:backButton="true"
        app:title="公众号"
        app:titleColor="@color/text_daily_mode"
        app:titleSize="17sp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/official_account_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/bg_daily_mode"
        app:tabMode="scrollable"
        app:tabTextColor="@color/text_daily_mode" />

    <android.support.v4.view.ViewPager
        android:id="@+id/official_account_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>